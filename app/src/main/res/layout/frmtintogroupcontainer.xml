<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sample_main_layout">


    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_cut"
        android:id="@+id/fabPartial"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:visibility="gone"
        android:layout_margin="26dp"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_search"
        android:id="@+id/fabAdd"
        android:visibility="gone"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="100dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutCompat3">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/ic_account"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_margin="10dp"
                android:layout_weight="13"
                android:textSize="20dp"
                android:id="@+id/lblUser"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="@string/sUbicacion"
                android:textSize="@dimen/text_size_large"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large_x"
                android:text="-"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:id="@+id/lblBin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        -->




        <LinearLayout
            android:layout_width="match_parent"

            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/txtCode"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890- "
                android:maxLines="1"
                android:hint="@string/sIngresarCodigo"
                android:textSize="@dimen/text_size_large_x"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="5dp"
                android:id="@+id/spPart"

                ></android.support.v7.widget.AppCompatSpinner>
            <!-- android:maxLines="1" android:digits="ABCDEFGHIJKLMNOPQRSTVWXYZ1234567890-" -->
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:enabled="false"
                android:src="@drawable/ic_search_med"
                android:id="@+id/btnContainer"
                android:elevation="3dp"
                android:textSize="20dp"
                android:background="@drawable/custombutton"
                android:layout_height="50dp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/llInfoContainer"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Peso: "
                android:textSize="@dimen/text_size_large_x"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:id="@+id/lblContainerNumberPart"
                android:maxLines="1"
                android:text="-"
                android:textSize="@dimen/text_size_large_x"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Descrip.:"
                android:textSize="@dimen/text_size_large_x"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlack"
                android:id="@+id/lblContainerInfo"
                android:maxLines="1"
                android:text="-"
                android:textSize="@dimen/text_size_large_x"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="Peso:"
                android:textSize="@dimen/text_size_large_x"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:id="@+id/lblCurrentWeight"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:text="-"
                android:textSize="@dimen/text_size_large_x"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:text="/"
                android:textSize="@dimen/text_size_large_x"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:id="@+id/lblWeight"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:text="-"
                android:textSize="@dimen/text_size_large_x"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:text="Lbs"
                android:textSize="@dimen/text_size_large_x"
                />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/ic_send"
                android:id="@+id/btnSearch"
                android:elevation="3dp"
                android:textSize="20dp"
                android:background="@drawable/custombutton"
                android:layout_height="45dp" />
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:id="@+id/lblScanned"
                    android:text="0"

                    android:background="#80FFFFFF"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large_x"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </android.support.v7.widget.LinearLayoutCompat>
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:background="#E0E0E0"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTempList"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </LinearLayout>


    </android.support.v7.widget.LinearLayoutCompat>
</android.support.design.widget.CoordinatorLayout>

